{
  "compilerOptions": {
    "lib": ["es2016", "dom"],
    "outDir": "build",
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDirs": [
      "src",
      "stories"
    ],
    "noImplicitAny": false,
    "allowJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "removeComments": true,
    "sourceMap": true,
    "mapRoot": "build",
    "resolveJsonModule": true,
    "declaration": true,
    "jsx": "react",
    "typeRoots": [
      "index.d.ts",
      "node_modules/@types"
    ]
  },
  "include": [
    "src",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".yarn",
    ".build-scripts",
    ".github",
    "build",
    "src/setupTests.ts",
    "**/*.test.tsx",
    "**/*.test.ts"
  ]
}