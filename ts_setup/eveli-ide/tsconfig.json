{
  "compilerOptions": {
    "target": "es6",
    "useDefineForClassFields": true,
    "lib": [
      "ES2021",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "src",
    "paths": {
      "@dxs-ts/eveli-ide": ["../src/index.ts"],
      "@/burger": [
        "../src/burger/index.ts"
      ],
      "@/feedback": [
        "../src/feedback/index.tsx"
      ],
    }
  },
  "include": [
    "src",
    "demo-app"
  ]
}